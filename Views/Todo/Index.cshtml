@model List<State_Managment.Models.Todo>

@{
    ViewData["Title"] = "Liste des Tâches";
    var todayDateTime = DateTime.Today;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-list-check me-2"></i>Ma Liste de Tâches
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Ajouter une tâche
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center mt-5">
            <i class="fas fa-clipboard-check fa-5x text-muted mb-3"></i>
            <h4 class="text-muted">Aucune tâche pour le moment.</h4>
            <p class="text-muted">Commencez par en ajouter une nouvelle !</p>
            <a asp-action="Create" class="btn btn-outline-success mt-2">
                <i class="fas fa-plus me-2"></i>Créer ma première tâche
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                int isDepassed = DateTime.Compare(item.DateLimit, todayDateTime);
                string cardClasses = "col-md-6 col-lg-4 mb-4";
                string cardBorderClasses = "card h-100 shadow-sm";

                if (item.State == State_Managment.Enums.TodoState.Done)
                {
                    cardBorderClasses += " barre";
                }
                if (isDepassed < 0)
                {
                    cardBorderClasses += " depasser";
                }

                <div class="@cardClasses">
                    <div class="@cardBorderClasses">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                @item.Libelle
                                @if (item.State == State_Managment.Enums.TodoState.Done)
                                {
                                    <i class="fas fa-check-circle text-success float-end"></i>
                                }
                                else if (isDepassed < 0)
                                {
                                    <i class="fas fa-exclamation-triangle text-danger float-end"></i>
                                }
                            </h5>
                            <p class="card-text text-muted flex-grow-1">@item.Description</p>

                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <span class="badge bg-@(item.State switch
                                      {
                                          State_Managment.Enums.TodoState.ToDo => "secondary",
                                          State_Managment.Enums.TodoState.Doing => "info",
                                          State_Managment.Enums.TodoState.Done => "success",
                                          _ => "light"
                                      })">
                            @item.State
                        </span>
                        <small class="text-muted">
                            <i class="far fa-calendar"></i> @item.DateLimit.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <div class="btn-group w-100" role="group">
                        <a asp-controller="Todo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-edit"></i> Éditer
                        </a>
                        <form asp-controller="Todo" asp-action="Delete" asp-route-id="@item.Id" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
                }
        </div>
    }
</div>