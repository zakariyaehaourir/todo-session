@{
   
    var theme = Context.Request.Cookies["bg-color"] ?? "white";
    var userName = Context.Session.GetString("UserAuth");
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/State_Managment.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    

</head>
<body class="@theme">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm @(theme == "dark" ? "navbar-dark bg-dark" : "navbar-light") border-bottom box-shadow mb-3" style="@(theme != "dark" ? "background-color: #2a9d8f;" : "")">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Todo" asp-action="Index">
                    <i class="fas fa-tasks me-2"></i>TodoApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Todo" asp-action="Index">
                                <i class="fas fa-list me-1"></i> Mes Tâches
                            </a>
                        </li>
                    </ul>
                    <!--Thème et Profil -->
                    <ul class="navbar-nav">
                        <!-- toggle theme -->
                        <li class="nav-item">
                            <button class="btn btn-link nav-link py-2 px-0 px-lg-2 text-white" id="theme-toggle" title="Basculer le thème">
                                <i class="@(theme == "dark" ? "fas fa-sun" : "fas fa-moon")"></i>
                            </button>
                        </li>
                        <!-- Menu profil utilisateur -->
                        @if (userName != null)
                        {
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="user-dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>
                                @if(userName != null)
                                {
                                    @userName
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="user-dropdown">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profil</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Paramètres</a></li>
                                <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger cursor-pointer" id="logout"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a></li>
                            </ul>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Flash message -->
            @if (TempData["FlashMessage"] != null)
            {
                var flash = System.Text.Json.JsonSerializer.Deserialize<State_Managment.ViewModels.FlashMessage>(TempData["FlashMessage"].ToString());
                string type = "warning";
                string icon = "fa-info-circle";
                if(flash.Type == State_Managment.Enums.FlashMessageTypes.Success)
                {
                    icon = "fa-circle-check";
                    type = "success";
                }
                else
                {
                    icon = "fa-triangle-exclamation";
                    type = "danger";
                }

                <div class="modal-backdrop show"></div>

                <div class="modal show" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-modal="true" role="dialog" style="display: block;">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header border-0">
                                <h5 class="modal-title" id="modalLabel"></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <i class="fas @icon fa-4x text-@type mb-3"></i>
                                <h4 class="text-@type">@type</h4>
                                <p class="mb-0">@flash.Message</p>
                            </div>
                            <div class="modal-footer border-0 justify-content-center">
                                <button type="button" class="btn btn-@type" data-bs-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - TodoApp - <i class="fas fa-heart text-danger"></i> Fait avec ASP.NET Core
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    <script>
        var themeBtn=document.getElementById('theme-toggle')
        themeBtn.addEventListener('click', function () {
            window.location= "/Theme/SetTheme"
        });
        //logout //redirect to controller action
        document.getElementById("logout").addEventListener('click' , function (){
            window.location = "/Logout"
        });
        //Fermeture de modal :
        document.querySelectorAll('[data-bs-dismiss="modal"]').forEach(button => {
            button.addEventListener('click', () => {
                
                document.getElementById('modal').style.display = 'none';
                
                document.querySelector('.modal-backdrop').remove();
                
                document.body.classList.remove('modal-open');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>